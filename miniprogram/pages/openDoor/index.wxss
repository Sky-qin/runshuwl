page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
.open-door-img {
  margin-top: 72rpx;
  width: 399rpx;
  height: 373rpx;
}

.open-door-text {
  margin-top: 39rpx;
  height:50rpx;
  font-size:36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:50rpx;
}

.open-door-tip {
  margin-top: 18rpx;
  width: 519rpx;
  height: 66rpx;
